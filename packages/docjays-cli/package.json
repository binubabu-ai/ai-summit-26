{
  "name": "docjays",
  "version": "0.3.8",
  "authors": [
    {
      "name": "Binu Babu",
      "email": "binu.babu@techjays.com"
    }  
  ],
  "description": "Documentation management for AI-assisted development",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "docjays": "./bin/docjays.js"
  },
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "files": [
    "bin",
    "dist",
    "templates",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "dev": "npm run build:watch",
    "clean": "node -e \"require('fs').rmSync('dist', {recursive: true, force: true})\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "keywords": [
    "documentation",
    "ai",
    "claude",
    "mcp",
    "cli",
    "docs",
    "knowledge-management"
  ],
  "author": "Techjays",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/techjays/ai-summit.git",
    "directory": "packages/docjays-cli"
  },
  "bugs": {
    "url": "https://github.com/techjays/ai-summit/issues"
  },
  "homepage": "https://docjays.dev",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "ajv": "^8.12.0",
    "boxen": "^7.1.1",
    "chalk": "^5.3.0",
    "chokidar": "^3.6.0",
    "cli-progress": "^3.12.0",
    "commander": "^12.0.0",
    "figures": "^6.0.1",
    "fs-extra": "^11.2.0",
    "inquirer": "^9.2.0",
    "node-fetch": "^3.3.2",
    "open": "^10.0.3",
    "ora": "^8.0.1",
    "simple-git": "^3.22.0"
  },
  "devDependencies": {
    "@types/cli-progress": "^3.11.5",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.2.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
